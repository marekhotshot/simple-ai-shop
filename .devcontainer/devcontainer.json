{
  "name": "Workspace",
  "dockerFile": "Dockerfile",
  "context": "..",
  "build": {
    "args": {
      "NODE_MAJOR_VERSION": "20"
    }
  },
  "postCreateCommand": "sudo chown -R nex:nex /home/nex/.cursor-server && sudo chmod -R 755 /home/nex/.cursor-server",
  "mounts": [
    "source=cursor-workspace-storage,target=/home/nex/.cursor-server,type=volume"
  ],
  "forwardPorts": [3000, 5432],
  "portsAttributes": {
    "3000": {
      "label": "Backend API",
      "onAutoForward": "notify",
      "protocol": "http"
    },
    "5432": {
      "label": "PostgreSQL Database",
      "onAutoForward": "silent",
      "protocol": "tcp"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  }
}
